<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width='wrap_content'
            android:layout_height='match_parent'
            android:layout_marginLeft='16dp'
            android:layout_centerInParent='true'
            android:text="待解决问题"
            android:textSize="20sp"
            android:textColor='@color/home_common_000000' />


        <Button
            android:id="@+id/btn_del_question"
            android:layout_width='70dp'
            android:layout_height='wrap_content'
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textSize="12sp"
            android:textColor='@color/home_common_FFFFFF' />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="执行部门" />

        <View
            style="@style/home_meeting_line"/>
        <EditText
            android:id="@+id/edt_question_department"
            style="@style/home_edt_new_meeting"
            android:hint="执行部门" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="@string/home_meeting_executor" />

        <View
            style="@style/home_meeting_line"/>
        <EditText
            android:id="@+id/edt_question_executor"
            style="@style/home_edt_new_meeting"
            android:focusable="false"
            android:hint="@string/home_meeting_executor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="要求时间" />

        <View
            style="@style/home_meeting_line"/>
        <EditText
            android:id="@+id/edt_question_predict_time"
            style="@style/home_edt_new_meeting"
            android:hint="要求时间" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="待解决问题"
            android:textColor="@color/home_common_000000" />
        <EditText
            android:id="@+id/edt_question_content"
            android:layout_width="match_parent"
            android:minHeight="70dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="请输入待解决问题"
            android:gravity="top"
            android:textColor="@color/home_common_434242"
            android:textColorHint="@color/home_common_9CA0A4"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="86dp"
            android:background="#000000" />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="86dp"
            android:layout_alignParentBottom="true"
            android:background="#000000" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/edt_question_content"
            android:layout_alignBottom="@id/edt_question_content"
            android:layout_marginStart="86dp"
            android:background="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="问题是否解决" />
        <View
            android:layout_marginStart="116dp"
            style="@style/home_meeting_line"/>

        <RadioGroup
            android:id="@+id/rg_question_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="@color/home_common_000000"/>
            <RadioButton
                android:id="@+id/rb_doing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执行中"
                android:textColor="@color/home_common_000000"/>
            <RadioButton
                android:id="@+id/rb_long_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长期"
                android:textColor="@color/home_common_000000"/>
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="解决时间" />

        <View
            style="@style/home_meeting_line"/>
        <EditText
            android:id="@+id/edt_question_finish_time"
            style="@style/home_edt_new_meeting"
            android:hint="解决时间" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="针对问题解决办法"
            android:textColor="@color/home_common_000000" />

        <EditText
            android:id="@+id/edt_question_method"
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="14dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="请输入针对问题解决办法"
            android:gravity="top"
            android:textColor="@color/home_common_434242"
            android:textColorHint="@color/home_common_9CA0A4"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="86dp"
            android:background="#000000" />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="86dp"
            android:layout_alignParentBottom="true"
            android:background="#000000" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/edt_question_method"
            android:layout_alignBottom="@id/edt_question_method"
            android:layout_marginStart="86dp"
            android:background="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="督办人" />

        <View
            style="@style/home_meeting_line"/>
        <EditText
            android:id="@+id/edt_question_supervisor"
            android:focusable="false"
            style="@style/home_edt_new_meeting"
            android:hint="督办人" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="督办时间" />

        <View
            style="@style/home_meeting_line"/>

        <EditText
            android:id="@+id/edt_supervise_time"
            style="@style/home_edt_new_meeting"
            android:hint="督办时间" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="督办状态" />

        <View
            style="@style/home_meeting_line"/>
        <RadioGroup
            android:id="@+id/rg_supervise_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:textColor="@color/home_common_000000"/>
            <RadioButton
                android:id="@+id/rb_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不同意"
                android:textColor="@color/home_common_000000"/>
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="督办意见"
            android:textColor="@color/home_common_000000" />

        <View
            android:minHeight="40dp"
            style="@style/home_meeting_line"/>
        <EditText
            android:id="@+id/edt_supervise_opinion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="请输入督办意见"
            android:gravity="top"
            android:textColor="@color/home_common_434242"
            android:textColorHint="@color/home_common_9CA0A4"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>