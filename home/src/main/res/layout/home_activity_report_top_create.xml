<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_rpt_create"
    android:background="@drawable/home_bg_table">

    <include
        android:id="@+id/icld_report"
        layout="@layout/home_include_back_title" />

    <LinearLayout
        android:id="@+id/ll_bottom_btn"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_edit_report"
            android:layout_width="110dp"
            android:layout_height="29dp"
            android:background="@drawable/home_bg_new_meeting"
            android:text="汇报" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/slv_report"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom_btn"
        android:layout_below="@id/icld_report">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">

                <TextView
                    style="@style/home_tv_new_meeting"
                    android:text="汇报人" />

                <EditText
                    android:id="@+id/edt_rp_name"
                    android:focusable="false"
                    style="@style/home_edt_new_meeting" />

                <View style="@style/home_meeting_line" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">

                <TextView
                    style="@style/home_tv_new_meeting"
                    android:text="汇报领导" />

                <EditText
                    android:id="@+id/edt_rp_leader"
                    android:focusable="false"
                    style="@style/home_edt_new_meeting" />

                <View style="@style/home_meeting_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">

                <TextView
                    android:layout_marginTop="6dp"
                    style="@style/home_tv_new_meeting"
                    android:text="汇报内容" />

                <EditText
                    android:id="@+id/edt_content"
                    android:layout_marginTop="6dp"
                    style="@style/home_edt_new_meeting" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="86dp"
                    android:background="#000000" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="86dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/edt_content"
                    android:layout_alignBottom="@id/edt_content"
                    android:layout_marginStart="86dp"
                    android:background="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="50dp"
                    style="@style/home_tv_new_meeting"
                    android:text="汇报人想法及诉求" />

                <EditText
                    android:id="@+id/edt_idea_expect"
                    android:layout_marginTop="6dp"
                    style="@style/home_edt_new_meeting" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="86dp"
                    android:background="#000000" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="86dp"
                    android:layout_alignParentBottom="true"
                    android:background="#000000" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@id/edt_idea_expect"
                    android:layout_alignBottom="@id/edt_idea_expect"
                    android:layout_marginStart="86dp"
                    android:background="#000000" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>