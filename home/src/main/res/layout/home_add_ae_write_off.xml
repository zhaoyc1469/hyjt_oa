<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width='wrap_content'
            android:layout_height='match_parent'
            android:layout_marginLeft='16dp'
            android:layout_centerInParent='true'
            android:text="核销借款单"
            android:textSize="20sp"
            android:textColor='@color/home_common_000000' />


        <Button
            android:id="@+id/btn_del_writeoff"
            android:layout_width='70dp'
            android:layout_height='wrap_content'
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textSize="12sp"
            android:textColor='@color/home_common_FFFFFF' />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="借款单编号" />

        <View
            style="@style/home_common_line"/>
        <EditText
            android:id="@+id/edt_writeoff_num"
            style="@style/home_edt_new_meeting"
            android:layout_marginLeft="120dp"
            android:hint="选择借款单编号" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="借款单选择" />

        <View
            style="@style/home_common_line"/>

        <Button
            android:id="@+id/btn_to_pson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="个人借款"/>

        <Button
            android:id="@+id/btn_to_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对公借款"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="借款单借款金额" />

        <View
            style="@style/home_common_line"/>
        <EditText
            android:id="@+id/edt_borrow_money"
            style="@style/home_edt_new_meeting"
            android:layout_marginLeft="120dp"
            android:focusable="false"
            android:hint="请输入借款单借款金额" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <TextView
            style="@style/home_tv_new_meeting"
            android:text="本次核销金额" />

        <View
            style="@style/home_common_line"/>
        <EditText
            android:id="@+id/edt_writeoff_money"
            style="@style/home_edt_new_meeting"
            android:layout_marginLeft="120dp"
            android:hint="请输入本次核销金额" />
    </RelativeLayout>

</LinearLayout>