<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/icld_create_mt"
        layout="@layout/home_include_edit_title" />

    <RelativeLayout
        android:id="@+id/rl_tab_type"
        android:layout_below="@id/icld_create_mt"
        android:layout_width="match_parent"
        android:layout_height="40.5dip"
        android:background="#406CEF">

        <LinearLayout
            android:layout_width="260dip"
            android:layout_height="26.5dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dip"
            android:background="@drawable/home_bg_tab"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_index1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="会议详情"
                android:textColor="#0E8CFF"
                android:textSize="14sp"
                android:background="@drawable/home_bg_tab_left"/>

            <TextView
                android:id="@+id/tv_index2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="问题列表"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_index3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="附件列表"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>