<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/home_bg_white_table">

        <EditText
            android:id="@+id/tv_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:textSize="14sp"
            android:textColor="@color/home_common_000000"
            android:background="@null"
            android:hint="输入附件名称" />


        <!--android:layout_marginEnd="95dp"-->
        <!--<View-->
            <!--android:layout_below="@id/tv_certificate"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/home_common_000000"/>-->


        <TextView
            android:layout_below="@id/tv_certificate"
            android:id="@+id/tv_certificate_file"
            android:textColor="@color/home_common_0D8CFF"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:textSize="@dimen/home_common_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证件名称"/>

        <Button
            android:id="@+id/btn_del_file"
            android:layout_width='70dp'
            android:layout_height='35dp'
            android:layout_alignParentEnd="true"
            android:text="删除"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>