<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_psonloan"
    android:background="@color/home_common_F4F5F6">

    <include
        android:id="@+id/icld_ploan_edit"
        layout="@layout/home_include_back_title" />

    <ScrollView
        android:layout_below="@id/icld_ploan_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="借款单编号" />
                <EditText android:id="@+id/edt_loan_num"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="申请时间" />
                <EditText android:id="@+id/edt_loan_time"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="申请人" />
                <EditText android:id="@+id/edt_proposer"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="公司" />
                <EditText android:id="@+id/edt_company"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="部门" />
                <EditText android:id="@+id/edt_department"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="首签领导" />
                <EditText android:id="@+id/edt_frist_leader"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="借款事由" />
                <EditText android:id="@+id/edt_loan_reason"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="借款金额" />
                <EditText android:id="@+id/edt_loan_amount"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="收款方式" />
                <EditText android:id="@+id/edt_payment_term"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="户名" />
                <EditText android:id="@+id/edt_account_name"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="开户银行" />
                <EditText android:id="@+id/edt_openact_bank"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/home_bg_white_table">
                <TextView style="@style/home_tv_standard"
                    android:text="银行账号" />
                <EditText android:id="@+id/edt_bank_account"
                    style="@style/home_edt_standard"
                    android:focusable="false" />
                <View style="@style/home_meeting_line" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_flow_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>