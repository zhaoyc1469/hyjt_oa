<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="rlWorkMsg">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:background">@drawable/bg_modules_num</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tvWorkMsg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">@dimen/dp_10</item>
        <item name="android:textColor">@color/common_FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
