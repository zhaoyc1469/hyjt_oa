                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_gswz"
                    style="@style/home_tv_org_top_btn_name"
                    android:text="@string/work_gswz" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_gsgl_child"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_below="@id/ll_gsgl"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
